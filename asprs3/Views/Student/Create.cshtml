@model asprs3.Models.Student
@{
    ViewBag.Title = "Add Student";
    //Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Add Student</h2>

<p>
    @Html.ActionLink("Back", "ManageStudent", "Students")
</p>

@using (Html.BeginForm("AddStudent", "Students", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.StudentFName)
        @Html.TextBoxFor(m => m.StudentFName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.StudentFName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StudentLName)
        @Html.TextBoxFor(m => m.StudentLName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.StudentLName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.StudentDOB)
        @Html.EditorFor(m => m.StudentDOB, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.StudentDOB)
    </div>
    <button type="submit" value="Add Student" class="btn btn-primary">Add Student</button>

}
